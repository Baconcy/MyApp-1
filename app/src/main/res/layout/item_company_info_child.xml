<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    >
    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">
        <TextView
            android:id="@+id/list_child"
            android:textColor="#a1333333"
            android:text="@string/device_info"
            android:layout_marginLeft="70dp"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/warning_child"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:textSize="@dimen/child_left_meun"
            android:background="#F24C52"
            android:text="报警6"
            android:layout_centerVertical="true"
            android:layout_below="@id/list_child"
            android:textColor="@color/white"
            android:layout_alignLeft="@id/list_child"
            android:layout_marginTop="8dp"
            android:focusable="false"

            />

        <Button
            android:id="@+id/wait_mainten_child"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:textSize="@dimen/child_left_meun"
            android:background="#FDBA58"
            android:text="待维保6"
            android:layout_alignTop="@id/warning_child"
            android:layout_toRightOf="@id/warning_child"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:focusable="false"

            />

        <Button
            android:id="@+id/healthy_state_child"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:textSize="@dimen/child_left_meun"
            android:background="#6179FD"
            android:text="健康状态差7"
            android:layout_alignTop="@id/warning_child"
            android:layout_toRightOf="@id/wait_mainten_child"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:focusable="false"
            />
    </RelativeLayout>

</RelativeLayout>